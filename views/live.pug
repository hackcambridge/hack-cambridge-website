extends layouts/base
block content
  include mixins/svg-elements
  main(layout='width')
    section(grid='columns' data-target='color.colorable')
      img(columns='6.0' draggable='false' src=asset('images/logo.svg'))
      div(columns='8.0' grid='rows' data-controller='events')
        h2.event-countdown.pixel(rows='1.0')
        h3(rows='1.0') On now
        div(rows='1.5' grid='columns')
          h5(columns='1.0'): time.pixel(datetime='' data-target='events.time')
          div(columns='4.0' data-target='events.name')
        h3(rows='1.0') Up next
        div(rows='1.5' grid='columns')
          h5(columns='1.0'): time.pixel(datetime='' data-target='events.time')
          div(columns='4.0' data-target='events.name')
      div(columns='4.0' grid='rows').social-column
        h2(rows='1.0').pixel #hack4D
        .live-social-feed-content(rows='6.0' grid='rows')
          div(rows='4.5' grid='rows')
            img.social-image(raster=true rows='4.0')
          div(rows=4.0)
            h6.social-title
            p.social-content
    script.
      window.liveConfig = { pusherKey: "#{pusherKey}" };
