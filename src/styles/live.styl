/* ==========================================================================
   Live screen to be presented during the event
   ========================================================================== */

.live-container {
	position: fixed;
	left: 0; right: 0; top: 0; bottom: 0;
	background-color: rgb(235,51,0);
	display: flex;
	flex-direction: column;
}

.live-container-event-countdown {
	flex: 1 1 auto;
	display: flex;
	flex-direction: column;
	justify-content: center;

	.event-countdown {
		flex: 0 0 auto;
		width: 100%;
		text-align: center;
		pointer-events: none;
		color: white;
		font-size: 60pt;
		-webkit-text-stroke: 1px alpha(rgb(235,51,0), 0.3);
		text-shadow: 0 4px 4px hsla(0, 0%, 0%, 0.4);
	}
}

.live-social-feed {
	flex: 0 0 auto;
	padding: 10px;
}

.live-social-feed-content {
	display: flex;
}

.live-social-feed-hashtag {
	padding: 10px;
	margin: 0;
	color: #fff;
	font-size: 1.7em;
}

.live-social-feed-item {
	height: 500px;
	padding: 10px;
	display: flex;
	flex-direction: column;
}

.live-social-feed-item-content {
	background: rgba(0, 0, 0, 0.3);
	flex: 1 0 auto;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	border-radius: 5px;
	padding: 10px;
	font-size: 1.2em;
	color: #fff;
	max-width: 400px;
	background-size: cover;
	background-position: center;

	img {
		display: block;
		max-width: 100%;
	}
}

.live-bar {
	width: 100%;
	padding: 8pt 12pt 4pt 12pt;
	background: black;
	
	&::before {
		content: "Currently playing:";
		color: white;
		display: inline-block;
		vertical-align: top;
	}

	.live-spotify-widget-cropper {
		display: inline-block;
		// Cut off the cover artwork and playlist name
		width: 220px;
		height: 40px;
		overflow: hidden;

		.live-spotify-widget {
			position: relative;
			left: -80px; top: -8px;
			border-radius: 0 0 8px 0;
			transition: left 0.2s;
			
			&:hover {
				left: 0;
			}
		}
	}
}

.live-sponsors {
	position: absolute;
	display: inline-block;
	left: 50%; transform: translateX(-50%);
	text-align: center;
	filter: grayscale(100%) brightness(9001);
	opacity: 0.8;
	width: 900px;
	
	img {
		position: relative;
		height: 40px;
		margin: 0 20pt;
		vertical-align: middle;
	}
}

.fractal-canvas {
	transition: filter 0, opacity 0;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: -1;
	
	&.vanish, &.fade {
		filter: blur(100px);
		opacity: 0;
	}
	
	&.vanish {
		transition: filter 0.4s cubic-bezier(0.600, 0.040, 0.980, 0.335), opacity 0.6s ease-in;
	}
	
	&.fade {
		transition: filter 4s cubic-bezier(0.600, 0.040, 0.980, 0.335), opacity 6s ease-in;
	}
}