#splash-hack-cambridge-logo-object {
    --min-width: var(--two);
}
#mlh-trust-badge {
    display: block;
    max-width: 100px;
    min-width: 60px;
    position: fixed;
    right: var(--one);
    top: 0;
    width: 10%;
    z-index: 10000;

    img {
        width: 100%
    }
}
#mlh-trust-badge::after {
    display: none;
}

@media (max-width: 595pt) {
    #splash-hack-cambridge-logo-object {
        max-width: var(--two);
    }
}

@media (min-width: 1063px) and (max-width: 1280px) {
    #mlh-trust-badge {
        left: var(--one);
    }
}

@media (max-width: 342pt) {
    div.container.width {
        margin: 0 calc(57 / 342 * 100vw);
    }
    #mlh-trust-badge {
        right: calc(57 / 342 * 100vw);
    }
}

@media (pointer: coarse) {
    .submit {
        display: none;
    }
}